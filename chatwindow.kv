# File name: chatwindow.kv

<ChatWindow>:
	text_log: _text_log
	text_input: _user_input
	
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		UserInput:
			id: _user_input
			hint_text: "Make a command here"
			on_text_validate: root.processText()

			
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'top'
		TextInput:
			id: _text_log
			size_hint: 1, None
			height: root.height - _user_input.height
			multiline: True
			readonly: True

<UserInput@TextInput>:
	multiline: False
	size_hint_y: None
	height: 30
	hint_color: .3, .3, .3, 1
