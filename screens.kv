# File name: screens.kv

#The list of all screens that are contained within the menu manager. every feature that needs a screen should be here
<MenuManager>:
	CalendarScreen:
	WeatherScreen:
	TwitterScreen:
	RedditScreen:
	FishScreen:
	SettingsScreen:
	PizzaScreen:
	RecipeScreen:
	NewsScreen:

<CalendarScreen>:
	name: "Calendar"
	
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		Label:
			id: _event_label
			text: "events here\nanother Line\n    A third line with a tab"
			halign: "left"
			canvas.before:
				Color:
					rgba: .8,.3,.3, 1
				Rectangle:
					pos: self.pos
					size: self.size
			size_hint: 1, None
			text_size: self.size
			halign: "left"
			valign: "top"
			height: 120
			
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'top'
		CalendarWidget:
			id: _calendar_window
			event_label: _event_label
			anchor_x: 'center'
			anchor_y: 'top'
			size_hint: 1, None
			height: root.height - 120

<WeatherScreen>:
	name: "Weather"
	
	BoxLayout:
		orientation: 'vertical'
		GridLayout:
			rows: 2
			size_hint: 1, None
			height: 60
			
			Label:
				text: "City"
				size_hint_x: None
				width: 100
			TextInput:
				id: cityInput
				multiline: False
			Label:
				text: "State"
				size_hint_x: None
				width: 100
			TextInput:
				multiline: False
		
		Button:
			text: "Get Weather"
			size_hint: 1, None
			height: 30
			
		GridLayout:
			rows: 2
			
			Button:
				id: tempButton
				background_color: .5, .5, 1, 1
				text: "Temperature here"
			Button: 
				id: summButton
				text: "Summary here"
				background_color: .5, .5, 1, 1
			Button:
				id: otherButton
				text: "something else here"
				background_color: .5, .5, 1, 1
			Button:
				id: imageButton
				text: "image here"
				background_color: .5, .5, 1, 1
			

<SettingsScreen>:
	name: "Settings"
	Label:
		text: "Settings Screen"
		canvas.before:
			Color:
				rgba: 1, 0, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size
				
<TwitterScreen>:
	name: "Twitter"
	BoxLayout:
		orientation: "vertical"
		canvas.before:
			Color:
				rgba: .1, .8, 1, 1
			Rectangle:
				pos: self.pos
				size: self.size
		
		Label:
			text: "Twitter screen"
			size_hint_y: None
			height: 30
			
		UserInput:
			id: _twitter_username
			size_hint_x: .9
			hint_text: "enter a twitter username here"
			
		TextInput:
			id: _twitter_results
			text: "users most recent posts will go here" + "\nhyperlinks would be nice"
			readonly: True
			
	Image:
		source: "images/TwitterLogo.png"
		size_hint_y: None
		height: self.width
		color: 1, 1, 1, 0.2
		

<RedditScreen>:
	name: "Reddit"
	BoxLayout:
		orientation: "vertical"
		canvas.before:
			Color:
				rgba: 1, .2, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size		
			
		Label:
			text: "Reddit screen"
			size_hint_y: None
			height: 30
		
		UserInput:
			id: _subreddit_input
			size_hint_x: 0.9
			hint_text: "Enter a subreddit name here"
			
		TextInput:
			readonly: True
			text: "The top post(s) from the subreddit go here" + "\nhyperlinks would be pretty cool"
			
	
	Image:
		source: "images/RedditLogo.png"
		size_hint_y: None
		height: self.width
		color: 1, 1, 1, 0.2
				
<FishScreen>:
	name: "Fishing"
	
	BoxLayout:
		orientation: "vertical"
		canvas.before:
			Color:
				rgba: 0, 0, 1, 1
			Rectangle:
				pos: self.pos
				size: self.size
			
		Label:
			id: _catch_label
			text: "You caught seaweed, Nice job...."

		AnchorLayout:
			size_hint_y: None
			height: 45
			
			anchor_x: "center"
			anchor_y: "top"
			Button:
				text: "Cast your line"
				size_hint_x: .5
				pos_hint_x: .5
				on_press: root.castLine()
	
	Image:
		id: _fish_image
		source: "images/Seaweed.png"
		size_hint: None, None
		size: 100, 100
		pos_hint: {"center_x": 0.5, "top": .9}
		
				
<SettingsScreen>:
	name: "Settings"
	Label:
		text: "settings screen"
		canvas.before:
			Color:
				rgba: 1, 0, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size
			
<PizzaScreen>:
	name: "Pizza"
	Label:
		text: "Pizza screen"
		canvas.before:
			Color:
				rgba: 1, 0, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size
	
<RecipeScreen>:
	name: "Recipes"
	
	BoxLayout:
		orientation: "vertical"
		canvas.before:
			Color:
				rgba: 0, 0, 1, 1
			Rectangle:
				pos: self.pos
				size: self.size
		
		Label:
			text: "Recipe Finder"
			size_hint_y: None
			height: 30
			
		UserInput:
			id: _news_keyword
			size_hint_x: .9
			hint_text: "Enter the meal you want to make here"
			
		Label:
			text: "Name of recipe here"
			size_hint_y: None
			height: 120		
			
		TextInput:
			text: "ingredients here"
			readonly: True
		
		TextInput:
			text: "instructions here"
			readonly: True
			

<NewsScreen>:
	name: "News"
	BoxLayout:
		orientation: "vertical"
		canvas.before:
			Color:
				rgba: .5, .5, .5, 1
			Rectangle:
				pos: self.pos
				size: self.size
				
		Label:
			text: "News Screen"
			size_hint_y: None
			height: 30
	
		UserInput:
			id: _meal_input
			size_hint_x: .9
			hint_text: "Enter your news keyword here"
			
		Label:
			text: "news results here"

				
<LoginPopup>:
	title: 'Log In' 
	size_hint: None, None
	size: 400, 400
	BoxLayout:
		orientation: "vertical"
		GridLayout:
			rows: 2
			size_hint: 1, None
			height: 60
		
			Label:
				text: "username"
			TextInput:
				multiline: False
			Label:
				text: "password"
			TextInput:
				multiline: False
				password: True
				
		Label:
		BoxLayout:
			orientation: "horizontal"
			Button:
				text: "Log In"
				on_release: root.dismiss()
			Button:
				text: "Guest"
				on_release: root.dismiss()
			Button:
				text: "Sign up"
				on_release: root.openSignupPopup()

<SignupPopup>:
	title: 'Sign Up' 
	size_hint: None, None
	size: 400, 400
	GridLayout:
		cols: 2
		
		Label:
			text: "username"
		TextInput:
			multiline: False
		Label:
			text: "password"
		TextInput:
			multiline: False
			password: True
		Label:
			text: "repeat password"
		TextInput:
			multiline: False
			password: True
		Button:
			text: "confirm"
			on_release: root.dismiss()				