# File name: screens.kv

<MenuManager>:
	CalendarScreen:
	WeatherScreen:
	MemeScreen:

<CalendarScreen>:
	name: "Calendar"
	
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		Label:
			id: event_label
			text: "events here"
			canvas.before:
				Color:
					rgba: 1, 0, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size
			size_hint: 1, None
			height: 60
			
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'top'
		CalendarWidget:
			anchor_x: 'center'
			anchor_y: 'top'
			size_hint: 1, None
			height: root.height - 60

<WeatherScreen>:
	name: "Weather"
	Label:
		text: "weather screen"
		canvas.before:
			Color:
				rgba: 1, .5, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size
		
<MemeScreen>:
	name: "Fun"
	Label:
		text: "meme screen"
		canvas.before:
			Color:
				rgba: 1, 0, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size