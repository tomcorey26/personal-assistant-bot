# File name: screens.kv

<MenuManager>:
	CalendarScreen:
	WeatherScreen:
	MemeScreen:

<CalendarScreen>:
	name: "Calendar"
	
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		Label:
			id: _event_label
			text: "events here"
			canvas.before:
				Color:
					rgba: 1, 0, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size
			size_hint: 1, None
			height: 60
			
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'top'
		CalendarWidget:
			id: _calendar_window
			event_label: _event_label
			anchor_x: 'center'
			anchor_y: 'top'
			size_hint: 1, None
			height: root.height - 60

<WeatherScreen>:
	name: "Weather"
	
	BoxLayout:
		orientation: 'vertical'
		GridLayout:
			rows: 2
			size_hint: 1, None
			height: 60
			
			Label:
				text: "City"
				size_hint_x: None
				width: 100
			TextInput:
				id: cityInput
				multiline: False
			Label:
				text: "State"
				size_hint_x: None
				width: 100
			TextInput:
				multiline: False
		
		Button:
			text: "Get Weather"
			size_hint: 1, None
			height: 30
			
		GridLayout:
			rows: 2
			
			Button:
				background_color: .5, .5, 1, 1
				text: "Temperature here"
			Button: 
				text: "Summary here"
				background_color: .5, .5, 1, 1
			Button:
				text: "something else here"
				background_color: .5, .5, 1, 1
			Button:
				text: "image here"
				background_color: .5, .5, 1, 1
			
			
		
<MemeScreen>:
	name: "Fun"
	Label:
		text: "meme screen"
		canvas.before:
			Color:
				rgba: 1, 0, 0, 1
			Rectangle:
				pos: self.pos
				size: self.size