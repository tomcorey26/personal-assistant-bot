<LoginPopup>:
	title: 'Log In' 
	size_hint: None, None
	size: 400, 400
	auto_dismiss: False
	BoxLayout:
		orientation: "vertical"
		GridLayout:
			rows: 2
			size_hint: 1, None
			height: 60
		
			Label:
				text: "username"
			TextInput:
				multiline: False
			Label:
				text: "password"
			TextInput:
				multiline: False
				password: True
				
		Label:
		BoxLayout:
			orientation: "horizontal"
			Button:
				text: "Log In"
				on_release: root.dismiss()
			Button:
				text: "Guest"
				on_release: root.dismiss()
			Button:
				text: "Sign up"
				on_release: root.openSignupPopup()

